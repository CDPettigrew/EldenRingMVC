@model IEnumerable<EldenRing.Models.WeaponModels.WeaponListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="createbtn">
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeaponId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfWeapon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicalDamage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfWeapon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhysicalDamage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationId)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Location.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.WeaponId }) |
                @Html.ActionLink("Details", "Details", new { id = item.WeaponId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.WeaponId })
            </td>
        </tr>
    }

</table>
